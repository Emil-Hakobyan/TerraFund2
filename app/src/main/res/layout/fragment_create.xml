<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:layout_margin="30dp"
    android:padding="30dp"
    android:orientation="vertical"
    android:background="@color/siren"
    >


    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write the title of your project"
        android:textSize="15dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/title_input"
        android:layout_below="@+id/title_label"
        android:layout_width="348dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="132dp"
        android:layout_margin="15dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Title" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/description_label"
        android:layout_below="@+id/title_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Write your project description"

        android:textSize="15dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description_input"
        android:layout_below="@+id/description_label"
        android:layout_width="348dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="132dp"
        android:layout_margin="15dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Description" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/budget_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/description_input"
        android:text="Write the amount you need"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/budget_input"
        android:layout_below="@+id/budget_label"
        android:layout_width="348dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="132dp"
        android:layout_margin="15dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Budget"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="12dp"
        android:text="Create"
        android:textColor="@color/black"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/budget_input"
        android:backgroundTint="@color/white"

        />



</RelativeLayout>